@model Fitness_Tracker.Models.GuifinalUser;

@{
    ViewData["Title"] = "Home Page";
}
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Calorie Tracker</title>
    <script>
        function updateImages(calories, weightLost) {
            // Update the source of the calorie image based on calories consumed
            var calorieImage = document.getElementById('calorieImage');
            if (calories >= 100) {
                calorieImage.src = '~/images/Calories/100percent.png';
            } else if (calories >= 80) {
                calorieImage.src = '~/images/Calories/80percent.png';
            } else if (calories >= 50) {
                calorieImage.src = '~/images/Calories/50percent.png';
            } else if (calories >= 10) {
                calorieImage.src = '~/images/Calories/10percent.png';
            } else {
                calorieImage.src = '~/images/Calories/empty.png';
            }

            // Update the source of the weight image based on weight lost
            var weightImage = document.getElementById('weightImage');
            if (weightLost >= 10) {
                weightImage.src = '~/images/Weight/Large.png';
            } else if (weightLost >= 5) {
                weightImage.src = '~/images/Weight/Medium-Large.png';
            } else if (weightLost >= 2) {
                weightImage.src = '~/images/Weight/Medium.png';
            } else if (weightLost >= 0.5) {
                weightImage.src = '~/images/Weight/Small-Medium.png';
            } else {
                weightImage.src = '~/images/Weight/Small.png';
            }
        }
    </script>
</head>


<body class="bg-light">
    <h1 class="text-center">FatAttack | Calorie Tracker</h1>
    <h1>@Model.UserId</h1>

    @if(!User.Identity.IsAuthenticated)
    {
        <h1 class="text-center">Please login to check weight progress</h1>
    }
    else
    {
            <div class="d-flex justify-content-around">
                <div>
                    <div class="container mt-5">
                        <!-- Record Food Eaten -->
                        <div class="mt-4">
                            <h3>Record Food Eaten</h3>
                            <form method="post" asp-controller="Home" asp-action="RecordFood" onsubmit="updateImages(parseInt(this.foodCalories.value), 0)">
                                <div class="form-group">
                                    <label for="foodName">Food Name:</label>
                                    <input type="text" class="form-control w-75" name="foodName" required>
                                </div>

                                <div class="form-group">
                                    <label for="foodCalories">Calories:</label>
                                    <input type="number" class="form-control w-75" name="foodCalories" required>
                                </div>

                                <button type="submit" class="btn btn-primary mt-4">Add Food</button>
                            </form>
                        </div>

                        <!-- Calories Left for the Day -->
                        <div class="mt-4">
                            <h3>Calories Left for the Day</h3>
                            <p>Goal: <span class="font-weight-bold">@Model.UserCaloriesToLoseWeight</span> calories</p>
                            <p>Consumed: <span class="font-weight-bold">2000</span> calories</p>
                            <p>Remaining: <span class="font-weight-bold">2000</span> calories</p>
                        </div>

                        <!-- Weight Tracker -->
                        <div class="mt-4">
                            <h3>Weight Tracker</h3>
                            <p>Starting Weight: <span class="font-weight-bold">@Model.UserStartingWeight</span> lbs</p>
                            <p>Current Weigth: <span class="font-weight-bold">@Model.UserCurrentWeight</span> lbs</p>
                            <p>Goal Weight: <span class="font-weight-bold">@Model.UserDesiredWeight</span> lbs</p>
                            <form method="" asp-controller="Home" asp-action="RecordWeightLost">
                                <div class="form-group">
                                    <label for="weightLost">Enter Weight Lost (lbs):</label>
                                    <input type="number" class="form-control w-75 mt-3" value="@Model.UserWeightLost">
                                </div>

                                <button type="submit" class="btn btn-success mt-4">Update Weight</button>
                            </form>
                        </div>
                    </div>
                </div>
                <div class="d-flex flex-column">
                    <img id="calorieImage" class="w-75 h-auto m-3" src="~/images/Calories/100percent.png" />

                    <h1>@ViewData["LostPercent"]</h1>
                    @if (Double.Parse(ViewData["LostPercent"].ToString()) <= 0.25)
                    {
                        <img id="weightImage" class="w-75 h-auto m-3" src="~/images/Weight/Large.png" />
                    }
                    else if (Double.Parse(ViewData["LostPercent"].ToString()) <= 0.50)
                    {
                        <img id="weightImage" class="w-75 h-auto m-3" src="~/images/Weight/Medium-Large.png" />
                    }
                    else if (Double.Parse(ViewData["LostPercent"].ToString()) <= 0.75)
                    {
                        <img id="weightImage" class="w-75 h-auto m-3" src="~/images/Weight/Medium.png" />
                    }
                    else if (Double.Parse(ViewData["LostPercent"].ToString()) < 1)
                    {
                        <img id="weightImage" class="w-75 h-auto m-3" src="~/images/Weight/Small-Medium.png" />
                    }
                    else if(Model.UserCurrentWeight <= Model.UserDesiredWeight)
                    {
                    <img id="weightImage" class="w-75 h-auto m-3" src="~/images/Weight/Small.png" />
                    }
                    else
                    {
                        <h1>Oops! There has been an error</h1>
                    }

                
                </div>
            </div>
    
    }
</body>

